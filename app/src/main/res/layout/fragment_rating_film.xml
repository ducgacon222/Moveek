<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.detailfilm.RatingFilmFragment">

    <LinearLayout
        android:id="@+id/linearlayout_rating_ratingfilm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_rating_1_ratingfilm"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_fb_angry_blackwhite"
            android:layout_marginRight="10dp">

        </ImageView>

        <ImageView
            android:id="@+id/img_rating_2_ratingfilm"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_fb_sad_blackwhite"
            android:layout_marginRight="10dp">

        </ImageView>

        <ImageView
            android:id="@+id/img_rating_3_ratingfilm"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_fb_wow_blackwhite"
            android:layout_marginRight="10dp">

        </ImageView>

        <ImageView
            android:id="@+id/img_rating_4_ratingfilm"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_fb_haha_blackwhite"
            android:layout_marginRight="10dp">

        </ImageView>

        <ImageView
            android:id="@+id/img_rating_5_ratingfilm"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_fb_lovelove_blackwhite"
            android:layout_marginRight="10dp">

        </ImageView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>