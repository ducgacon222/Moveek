<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.cinema.CinemaFragment">

    <TextView
        android:id="@+id/tv_cinema_blog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/tv_title_cinema"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_location_cinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_location_on"
        app:layout_constraintStart_toStartOf="@+id/tv_cinema_blog"
        app:layout_constraintTop_toBottomOf="@+id/tv_cinema_blog"
        app:tint="#487ebc">

    </ImageView>

    <TextView
        android:id="@+id/tv_location_cinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All"
        android:textSize="18sp"
        android:textColor="#487ebc"
        app:layout_constraintBottom_toBottomOf="@+id/img_location_cinema"
        app:layout_constraintStart_toEndOf="@+id/img_location_cinema"
        app:layout_constraintTop_toTopOf="@+id/img_location_cinema">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>